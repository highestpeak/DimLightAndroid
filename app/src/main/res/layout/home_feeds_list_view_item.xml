<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/left_wrapper"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="#0d335d"
        >

        <ImageView
            android:id="@+id/mark_read_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="mark_read_button"
            android:src="@drawable/ic_baseline_star_border_24"
            tools:ignore="HardcodedText"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_wrapper"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="#2c061f"
        >

        <ImageView
            android:id="@+id/mark_star_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="mark_star_button"
            android:src="@drawable/ic_baseline_star_border_24"
            tools:ignore="HardcodedText"
            />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/feed_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="标题占位"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/feed_item_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="这里是描述内容，描述 feed 的摘要，摘要可以是直接摘取的子字符串，也可以是 code 生成的摘要,这个摘要可能在这里不会被显示，取决于 adapter 的设置，这个摘要有字数限制，当有图片时选取和知乎一样的图片呈现方式(呈现一张，在顶部)"
            android:textColor="#222831"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feed_item_title"
            />
        <!--android:visibility="gone"-->

        <TextView
            android:id="@+id/feed_item_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Youtube-Google Developer 1w read 100 like 1/13-22:18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feed_item_summary"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.daimajia.swipe.SwipeLayout>