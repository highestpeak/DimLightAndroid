<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >
    <!--采用 youtube list 样式-->
    <ImageView
        android:id="@+id/video_preview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintRight_toLeftOf="@id/video_title"
        android:layout_width="0dp"
        android:src="@drawable/test_video_preview"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:contentDescription="TODO"
        />

    <TextView
        android:id="@+id/video_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="1:20:10"
        app:layout_constraintBottom_toBottomOf="@id/video_preview"
        app:layout_constraintRight_toRightOf="@id/video_preview"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/video_title"
        app:layout_constraintLeft_toRightOf="@id/video_preview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="normal|bold"
        android:textColor="@color/black"
        android:text="2000年8月15日巅峰对决-江泽民主席与华莱士谈笑风生"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/video_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/video_preview"
        app:layout_constraintBottom_toTopOf="@id/video_data"
        android:text="David Chen"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/video_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/video_preview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="83万播放 2749评论"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        />

    <!--这个按钮更换为竖向三个点-->
    <ImageView
        android:id="@+id/item_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_navigate_next_24"
        />
